@model MaoriSouvenirShopping.Models.Order

@{
    ViewData["Title"] = "Purchased";
}

<h2><span class="glyphicon glyphicon-saved"></span>Thank you For Your Purchase!</h2>

<div>
    <h4>The following order will be dispatched as per the details below.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.User.Email)</dt>
        <dd>@Html.DisplayFor(model => model.User.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.User.Address)</dt>
        <dd>@Html.DisplayFor(model => model.User.Address)</dd>

        <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>

        <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>

        <dt>@Html.DisplayNameFor(model => model.City)</dt>
        <dd>@Html.DisplayFor(model => model.City)</dd>

        <dt>@Html.DisplayNameFor(model => model.State)</dt>
        <dd>@Html.DisplayFor(model => model.State)</dd>

        <dt>@Html.DisplayNameFor(model => model.PostalCode)</dt>
        <dd>@Html.DisplayFor(model => model.PostalCode)</dd>

        <dt>@Html.DisplayNameFor(model => model.Country)</dt>
        <dd>@Html.DisplayFor(model => model.Country)</dd>

        <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
        <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt>@Html.DisplayNameFor(model => model.TotalCost)</dt>
        <dd>@Html.DisplayFor(model => model.TotalCost)</dd>

        <dt>@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>

        <dt>@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>

        <dd>
            <table class="table">
                <tr>
                    <th>Item ID</th>
                    <th>Souvenir</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.OrderDetails)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Souvenir.SouvenirID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Souvenir.SouvenirName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Souvenir.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Souvenir.Price)
                    </td>
                </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <label>Total:</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TotalCost)
                    </td>
                </tr>
            </table>
        </dd>
    </dl>
</div>
