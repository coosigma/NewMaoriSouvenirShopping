@model MaoriSouvenirShopping.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderID):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt>
            Customer ID:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt>
            Customer Name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt>
            Customer Address:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Address)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Item ID</th>
                    <th>Souvenir</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Souvenir.SouvenirID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Souvenir.SouvenirName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Souvenir.Category.CategoryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Souvenir.Price)</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <label>Sub Total:</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.SubTotal)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <label>GST:</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TotalGST)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <label>Total:</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TotalCost)
                    </td>
                </tr>
            </table>
        </dd>


    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="hidden" asp-for="OrderID" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
